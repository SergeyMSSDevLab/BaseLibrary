<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".upgrade.UpgradeActivity1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/abuInviteImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/bl_item_spacing_horizontal"
            android:layout_marginLeft="@dimen/bl_item_spacing_horizontal"
            android:layout_marginRight="@dimen/bl_item_spacing_horizontal"
            android:layout_marginStart="@dimen/bl_item_spacing_horizontal"
            android:layout_marginTop="@dimen/bl_item_spacing_vertical_4"
            android:contentDescription="temp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/abuInviteDescription"
            app:srcCompat="@drawable/ic_app_update_black_24dp" />

        <TextView
            android:id="@+id/abuInviteTitle"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/bl_item_spacing_horizontal"
            android:layout_marginLeft="@dimen/bl_item_spacing_horizontal"
            android:layout_marginRight="@dimen/bl_item_spacing_horizontal"
            android:layout_marginStart="@dimen/bl_item_spacing_horizontal"
            android:layout_marginTop="@dimen/bl_item_spacing_vertical_2"
            android:text="title"
            app:layout_constraintLeft_toRightOf="@+id/abuInviteImage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/abuInviteDescription"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/bl_item_spacing_horizontal"
            android:layout_marginRight="@dimen/bl_item_spacing_horizontal"
            android:paddingTop="@dimen/bl_item_spacing_vertical_4"
            app:layout_constraintLeft_toLeftOf="@+id/abuInviteTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/abuInviteTitle"
            android:text="description"
            tools:text="description" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
