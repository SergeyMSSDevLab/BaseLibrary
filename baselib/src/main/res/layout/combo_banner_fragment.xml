<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <data>
        <variable name="viewModel" type="com.mssdevlab.baselib.ComboBannerViewModel"/>
    </data>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Fragment start"
            tools:text="Fragment start" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@{viewModel.appName}"
            tools:text="Hello" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Fragment end"
            tools:text="Fragment end" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
